<header role="banner" class="header {% if template == 'blog' or template == 'article' %} secondary {% else %} main {% endif %}">
  <div class="header__container container">
    <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
      <div class="header__heading-logo-wrapper ">
        {%- if template == 'blog' or template == 'article' -%}
          {% render 'icon-logo-submark' with id: 'header' %}
        {%- else -%}
          <div class="tablet-hide">

            {%- if section.settings.logo != blank -%}
              <img
                srcset="{{ section.settings.logo.src | image_url: width: 1500 }}"
                src="{{ section.settings.logo.src | image_url: width: 533 }}"
                alt="{{ section.settings.logo.src.alt | escape }}"
                class="motion-reduce"
                loading="lazy"
                width="{{ section.settings.logo.width }}"
                height="{{ section.settings.logo.height }}">
            {%- else -%}
              {% render 'icon-logo' with id: 'header', hide_tagline: section.settings.hide_tagline %}
            {%- endif -%}
          </div>

          <div class="tabletup-hide">
            {%- if section.settings.mobile_logo != blank -%}
              <img
                srcset="{{ section.settings.mobile_logo.src | image_url: width: 1500 }}"
                src="{{ section.settings.mobile_logo.src | image_url: width: 533 }}"
                alt="{{ section.settings.mobile_logo.src.alt | escape }}"
                class="motion-reduce"
                loading="lazy"
                width="{{ section.settings.mobile_logo.width }}"
                height="{{ section.settings.mobile_logo.height }}">
            {%- else -%}
              {% render 'icon-logo-mobile' with id: 'mobile-header', hide_tagline: section.settings.hide_tagline %}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </a>
  </div>
</header>
{% render 'navigation-desktop' links: section.settings.menu.links %}
{% render 'navigation-mobile' links: section.settings.menu.links %}


{% schema %}
  {
    "name": "t:sections.header.name",
    "class": "section-header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "t:sections.header.settings.menu.label"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "image_picker",
        "id": "mobile_logo",
        "label": "Mobile Logo"
      },
      {
        "type": "checkbox",
        "id": "hide_tagline",
        "label": "Hide tagline",
        "info": "This only applies if the logo isn't uploaded above. If it's not uploaded above, the logo will be hardcoded in as an SVG. "
      }, {
        "type": "image_picker",
        "id": "secondary_logo",
        "label": "The Edit Logo",
        "info": "Will replace logo on Edit (Blog) Pages"
      }, {
        "type": "select",
        "id": "sticky_header_type",
        "options": [
          {
            "value": "none",
            "label": "t:sections.header.settings.sticky_header_type.options__1.label"
          }, {
            "value": "on-scroll-up",
            "label": "t:sections.header.settings.sticky_header_type.options__2.label"
          }, {
            "value": "always",
            "label": "t:sections.header.settings.sticky_header_type.options__3.label"
          }
        ],
        "default": "on-scroll-up",
        "label": "Sticky Navigation"
      }, {
        "type": "header",
        "content": "Link Bottom Margin"
      }, {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.header.settings.margin_bottom.label",
        "default": 0
      }
    ],
    "blocks": [
      {
        "type": "@app"
      }
    ]
  }
{% endschema %}